<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="10017" id="com.weare148.respire.test" ios-CFBundleVersion="1.0.6" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Respire</name>
    <description>Surveillez la qualité de l'air à Paris !</description>
    <author email="contact@148.fr">Agence 148</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" height="36" platform="android" src="platforms/android/app/src/main/res/drawable-ldpi/icon.png" width="36" />
        <icon density="mdpi" height="48" platform="android" src="platforms/android/app/src/main/res/drawable-mdpi/icon.png" width="48" />
        <icon density="hdpi" height="72" platform="android" src="platforms/android/app/src/main/res/drawable-hdpi/icon.png" width="72" />
        <icon density="xhdpi" height="96" platform="android" src="platforms/android/app/src/main/res/drawable-xhdpi/icon.png" width="96" />
        <icon density="xxhdpi" height="114" platform="android" src="platforms/android/app/src/main/res/drawable-xxhdpi/icon.png" width="114" />
        <icon density="xxxhdpi" height="192" platform="android" src="platforms/android/app/src/main/res/drawable-xxxhdpi/icon.png" width="192" />
        <splash src="platforms/android/app/src/main/drawable-land-ldpi/screen.png" density="land-ldpi" />
        <splash src="platforms/android/app/src/main/drawable-land-mdpi/screen.png" density="land-mdpi" />
        <splash src="platforms/android/app/src/main/drawable-port-ldpi/screen.png" density="port-ldpi" />
        <splash src="platforms/android/app/src/main/drawable-port-mdpi/screen.png" density="port-mdpi" />
        <splash src="platforms/android/app/src/main/drawable-port-hdpi/screen.png" density="port-hdpi" />
        <splash src="platforms/android/app/src/main/drawable-land-hdpi/screen.png" density="land-hdpi" />
        <splash src="platforms/android/app/src/main/drawable-land-xhdpi/screen.png" density="land-xhdpi" />
        <splash src="platforms/android/app/src/main/drawable-port-xhdpi/screen.png" density="port-xhdpi" />
        <splash src="platforms/android/app/src/main/drawable-land-xxhdpi/screen.png" density="land-xxhdpi" />
        <splash src="platforms/android/app/src/main/drawable-port-xxhdpi/screen.png" density="port-xxhdpi" />
        <splash src="platforms/android/app/src/main/drawable-land-xxxhdpi/screen.png" density="land-xxxhdpi" />
        <splash src="platforms/android/app/src/main/drawable-port-xxxhdpi/screen.png" density="port-xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <splash src="platforms/ios/Respire/res/screen/Default@2x~universal~anyany.png" />
        <splash src="platforms/ios/Respire/Images.xcassets/LaunchImage.launchimage/Default~iphone.png" width="320" height="480" />
        <splash src="platforms/ios/Respire/Images.xcassets/LaunchImage.launchimage/Default@2x~iphone.png" width="2048" height="1536" />
        <splash src="platforms/ios/Respire/Images.xcassets/LaunchImage.launchimage/Default-568h@2x~iphone.png" width="640" height="1136" />
        <splash src="platforms/ios/Respire/Images.xcassets/LaunchImage.launchimage/Default-Portrait~ipad.png" width="640" height="960" />
        <splash src="platforms/ios/Respire/Images.xcassets/LaunchImage.launchimage/Default-Landscape~ipad.png" width="750" height="1334" />
        <splash src="platforms/ios/Respire/Images.xcassets/LaunchImage.launchimage/Default-667h.png" width="768" height="1024" />
        <splash src="platforms/ios/Respire/Images.xcassets/LaunchImage.launchimage/Default-Landscape@2x~ipad.png" width="1125" height="2436" />
        <splash src="platforms/ios/Respire/Images.xcassets/LaunchImage.launchimage/Default-Portrait@2x~ipad.png" width="2436" height="1125" />
        <splash src="platforms/ios/Respire/Images.xcassets/LaunchImage.launchimage/Default-736h.png" width="1242" height="2208" />
        <splash src="platforms/ios/Respire/Images.xcassets/LaunchImage.launchimage/Default-Landscape-736h.png" width="1536" height="2048" />
        <splash src="platforms/ios/Respire/Images.xcassets/LaunchImage.launchimage/Default-Landscape-2436h.png" width="1024" height="768" />
        <splash src="platforms/ios/Respire/Images.xcassets/LaunchImage.launchimage/Default-2436h.png" width="2208" height="1242" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-device" spec="~1.1.3" />
    <preference name="Orientation" value="portrait" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="android-targetSdkVersion" value="26" />
    <engine name="ios" spec="~4.5.5" />
    <engine name="browser" spec="~4.1.0" />
    <engine name="android" spec="^6.2.2" />
    <edit-config file="*-Info.plist" mode="merge" platform="ios" target="NSLocationWhenInUseUsageDescription">
        <string>L'application Respire a besoin de votre position pour fonctionner</string>
    </edit-config>
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1">
        <variable name="GEOLOCATION_USAGE_DESCRIPTION" value="L'application Respire a besoin de votre position pour fonctionner" />
    </plugin>
    <preference name="SplashScreenDelay" value="3000" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
</widget>
