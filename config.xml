<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="10012" id="com.weare148.respire.test" ios-CFBundleVersion="1.0.2" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Respire</name>
    <description>Surveillez la qualité de l'air à Paris !</description>
    <author email="contact@148.fr">Agence 148</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="platforms/android/app/src/main/res/drawable-ldpi/icon.png" platform="android" width="36" height="36" density="ldpi" />
        <icon src="platforms/android/app/src/main/res/drawable-mdpi/icon.png" platform="android" width="48" height="48" density="mdpi" />
        <icon src="platforms/android/app/src/main/res/drawable-hdpi/icon.png" platform="android" width="72" height="72" density="hdpi" />
        <icon src="platforms/android/app/src/main/res/drawable-xhdpi/icon.png" platform="android" width="96" height="96" density="xhdpi" />
        <icon src="platforms/android/app/src/main/res/drawable-xxhdpi/icon.png" platform="android" width="114" height="114" density="xxhdpi" />
        <icon src="platforms/android/app/src/main/res/drawable-xxxhdpi/icon.png" platform="android" width="192" height="192" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-device" spec="~1.1.3" />
    <plugin name="cordova-plugin-geolocation" spec="~2.4.0" />
    <preference name="Orientation" value="portrait" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="android-targetSdkVersion" value="26" />
    <engine name="ios" spec="~4.2.1" />
    <engine name="browser" spec="~4.1.0" />
    <engine name="android" spec="^6.2.2" />
    <edit-config target="NSLocationWhenInUseUsageDescription" file="*-Info.plist" mode="merge">
        <string>L'application Respire a besoin de votre position pour fonctionner</string>
    </edit-config>
</widget>
