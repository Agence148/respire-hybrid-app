<?xml version='1.0' encoding='utf-8'?>
<widget id="com.weare148.respire" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Respire</name>
    <description>
      Surveillez la qualité de l'air à Paris !
    </description>
    <author email="contact@148.fr">
      Agence 148
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <engine name="ios" spec="~4.2.1" />
    <engine name="browser" spec="~4.1.0" />
    <engine name="android" spec="~6.2.2" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-device" spec="~1.1.3" />
    <plugin name="cordova-plugin-geolocation" spec="~2.4.0" />
</widget>
